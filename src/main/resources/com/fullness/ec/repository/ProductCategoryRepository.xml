<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="com.fullness.ec.repository.ProductCategoryRepository">
    <resultMap type="com.fullness.ec.entity.ProductCategory" id="productCategoryResult">
        <id property="id" column="product_category_id" />
        <result property="name" column="product_category_name"/>
        <collection property="items" ofType="com.fullness.ec.entity.Product">
            <id property="id" column="product_id" />
            <result property="name" column="profuct_name"/>
            <result property="price" column="product_price"/>
            <result property="imageUrl" column="product_image_url"/>
            <result property="deleteFlag" column="product_delete_flag"/>
            <result property="productCategoryId" column="product_category_id"/>
        </collection>
    </resultMap>
    <select id="selectAll" resultMap="productCategoryResult">
        select
            p.id as product_id,
            p.name as product_name,
            p.price as product_price,
            p.image_url as product_image_url,
            p.product_category_id as product_category_id,
            p.delete_flag as product_delete_flag
            pc.name as product_category_name
        from
            product_category pc
        inner join
            product p
        on
            pc.id = p.category_id
    </select>
    <insert id="insert" parameterType="com.fullness.ec.entity.ProductCategory">
        <selectKey keyProperty="product_category_id" resultType="Integer" order="BEFORE">
            select nextval('category_id_seq')
        </selectKey>
            insert into product_category values(#{productCategoryId}, #{productCategoryName})
    </insert>
</mapper>